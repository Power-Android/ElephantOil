<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="@dimen/dp_303"
        android:layout_height="@dimen/dp_312"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape_white_13radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
<!--        <ImageView-->
<!--            android:id="@+id/close_iv"-->
<!--            android:layout_width="@dimen/dp_43"-->
<!--            android:layout_height="@dimen/dp_43"-->
<!--            android:padding="@dimen/dp_15"-->
<!--            android:src="@drawable/icon_tb_close_bg"-->
<!--            android:layout_alignParentEnd="true"/>-->
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入退款原因"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_34"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"/>
       <CheckBox
           android:id="@+id/check_box"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="left"
           android:layout_marginTop="@dimen/dp_12"
           android:textSize="@dimen/sp_13"
           android:textColor="@color/color_34"
           android:checked="true"
           android:button="@drawable/selector_checkbox"
           android:paddingLeft="5dp"
           android:layout_marginLeft="18dp"
           android:text="选错站付款"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical"
            app:qmui_borderWidth="0.5dp"
            app:qmui_borderColor="@color/color_D8"
            app:qmui_backgroundColor="#fafafa"
            app:qmui_radius="5dp">
            <EditText
                android:id="@+id/edit_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="若非上述原因，请在这里填写"
                android:textColorHint="@color/color_AE"
                android:textColor="@color/color_34"
                android:textSize="@dimen/sp_13"
                android:gravity="left"
                android:maxLength="200"
                android:padding="9dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="9dp"
                android:textSize="@dimen/sp_11"
                android:layout_marginTop="9dp"
                android:textColor="@color/color_AE"
                android:text="最多输入200字"/>
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_D8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cancel_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:text="取消"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_D8"/>
            <TextView
                android:id="@+id/confirm_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:text="确定"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>