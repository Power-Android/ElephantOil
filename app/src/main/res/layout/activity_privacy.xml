<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyActivity">
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/color_76FF"
        android:alpha="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:text="在您使用小象加油App时，需要您开启以下权限"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_76FF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toTopOf="@+id/view3">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F0"
        android:paddingTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:background="@drawable/privacy_iv"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/common_margin"
            app:layout_constraintBottom_toTopOf="@+id/no_agree_tv"/>
        <TextView
            android:id="@+id/no_agree_tv"
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_43"
            android:text="不同意"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_76FF"
            android:background="@drawable/shape_stroke_blue_4radius"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/agree_tv"/>
        <TextView
            android:id="@+id/agree_tv"
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_43"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:gravity="center"
            android:background="@drawable/shape_blue_4radius"
            android:layout_marginBottom="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/no_agree_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>