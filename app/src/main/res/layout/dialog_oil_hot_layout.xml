<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_400"
            android:layout_centerInParent="true"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderWidth="@dimen/dp_0"
            app:qmui_radius="@dimen/dp_6">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_156"
                android:background="@drawable/oil_hot_bg" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_75"
                android:layout_marginBottom="@dimen/dp_20">

                <ImageView
                    android:id="@+id/hot_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/common_margin"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/common_margin"
                    android:paddingBottom="@dimen/common_margin" />
            </ScrollView>

        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@+id/content_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_dialog_close" />
    </RelativeLayout>
</RelativeLayout>