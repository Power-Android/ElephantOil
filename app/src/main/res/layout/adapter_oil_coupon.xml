<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginBottom="@dimen/dp_3"
    android:id="@+id/rootView"
    android:background="@drawable/coupon_bg">
    <TextView
        android:id="@+id/money_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_6431"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_25"
        android:text="0"
        android:textColor="@color/color_6431"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_1"
        app:layout_constraintStart_toEndOf="@+id/money_tag"/>
    <TextView
        android:id="@+id/item_use_range_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满199元可用"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/color_99"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="满199元减10元加油券"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_view"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_coupon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-01-25 14:51:49"
        android:layout_marginTop="@dimen/dp_5"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
        app:layout_constraintStart_toStartOf="@+id/item_title_tv"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:src="@drawable/default_img_bg"
        app:riv_corner_radius="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/status_view"
        android:layout_width="@dimen/dp_57"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:src="@drawable/ic_coupon_expired"/>
</androidx.constraintlayout.widget.ConstraintLayout>