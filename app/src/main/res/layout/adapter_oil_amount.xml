<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:layout_margin="@dimen/dp_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_oil_check_bg">
    <TextView
        android:id="@+id/item_money_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textStyle="bold"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_34"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_discount_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_amount_tv"/>
    <TextView
        android:id="@+id/item_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/color_34"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_money_tag"
        app:layout_constraintStart_toEndOf="@+id/item_money_tag"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠 ¥0.00"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_50"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@+id/item_money_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>