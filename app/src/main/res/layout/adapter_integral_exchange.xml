<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_265"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_white_6raduis">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        android:src="@drawable/default_img_bg"
        android:layout_marginTop="@dimen/dp_6"
        app:riv_corner_radius="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_34"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@+id/item_img_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_img_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_img_iv"/>
    <TextView
        android:id="@+id/item_integral_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0积分"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_070D"
        android:singleLine="true"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_img_iv"
        app:layout_constraintEnd_toEndOf="@id/item_img_iv"/>
    <TextView
        android:id="@+id/sell_num_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已兑换0件"
        android:includeFontPadding="false"
        android:textColor="@color/color_9A"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@id/item_integral_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_integral_tv"/>
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/icon_org_arrow"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_integral_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>