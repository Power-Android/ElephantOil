<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_85"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/item_img_iv"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:src="@drawable/default_img_bg"
            android:scaleType="centerCrop"
            app:qmui_corner_radius="@dimen/dp_10"
            app:qmui_is_circle="false"
            app:qmui_border_width="0dp"
           />
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="星巴克大杯拿铁"
            android:textSize="@dimen/sp_12"
            android:textColor="#402C15"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            android:includeFontPadding="false"
          />
        <TextView
            android:id="@+id/item_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价值：¥0"
            android:textSize="@dimen/sp_11"
            android:textColor="#565656"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@+id/item_name_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>