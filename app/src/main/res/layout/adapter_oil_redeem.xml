<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_232"
    android:layout_height="@dimen/dp_92"
    android:layout_marginEnd="@dimen/dp_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="match_parent"
        android:background="@drawable/shape_right_8radius"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="星巴克大杯拿铁"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_2C"
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="大杯拿铁"
            android:textSize="@dimen/sp_12"
            android:textColor="#838190"
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/item_name_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textSize="@dimen/sp_16"
            android:textColor="#EA3323"
            android:layout_marginBottom="@dimen/dp_10"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"/>
        <TextView
            android:id="@+id/item_orin_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_9A"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintBaseline_toBaselineOf="@+id/item_price_tv"
            app:layout_constraintStart_toEndOf="@+id/item_price_tv"/>
        <ImageView
            android:id="@+id/item_check_box"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/redeem_unslect_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_price_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_92"
        android:src="@drawable/default_img_bg"
        app:riv_corner_radius_top_left="@dimen/dp_8"
        app:riv_corner_radius_bottom_left="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>