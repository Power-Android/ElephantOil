<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/location_iv"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_13"
            android:layout_marginStart="@dimen/common_margin"
            android:src="@drawable/icon_location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="暂无定位"
            android:textColor="@color/color_34"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/dp_20"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_iv"
            app:layout_constraintStart_toEndOf="@+id/location_iv" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_18"
            android:layout_marginEnd="@dimen/common_margin"
            android:src="@drawable/icon_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollDrag="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_58"
                    android:text="小象加油根据您当前的位置智能优选"
                    android:textColor="@color/color_6A"
                    android:textSize="@dimen/sp_11" />

                <RelativeLayout
                    android:id="@+id/home_quick_oil_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/icon_home_oil_bg"
                    android:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/oil_img_iv"
                            android:layout_width="@dimen/dp_73"
                            android:layout_height="@dimen/dp_73"
                            android:layout_marginStart="@dimen/dp_32"
                            android:layout_marginTop="@dimen/dp_7"
                            android:src="@drawable/default_img_bg"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/oil_name_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_13"
                            android:layout_marginTop="@dimen/dp_27"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/oil_img_iv"
                            app:layout_constraintTop_toTopOf="@+id/oil_img_iv" />

                        <TextView
                            android:id="@+id/oil_address_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/oil_name_tv"
                            app:layout_constraintTop_toBottomOf="@+id/oil_name_tv" />

                        <TextView
                            android:id="@+id/oil_money_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_18"
                            android:layout_marginTop="@dimen/dp_15"
                            android:includeFontPadding="false"
                            android:text="￥"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/oil_img_iv" />

                        <TextView
                            android:id="@+id/oil_current_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_22"
                            app:layout_constraintBaseline_toBaselineOf="@+id/oil_money_tag"
                            app:layout_constraintStart_toEndOf="@+id/oil_money_tag" />

                        <TextView
                            android:id="@+id/oil_original_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:alpha="0.69"
                            android:includeFontPadding="false"
                            android:text="油站价￥0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13"
                            app:layout_constraintBaseline_toBaselineOf="@+id/oil_money_tag"
                            app:layout_constraintStart_toEndOf="@+id/oil_current_price_tv" />

                        <TextView
                            android:id="@+id/oil_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/shape_white_4raduis"
                            android:drawableRight="@drawable/icon_down_arrow"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:padding="@dimen/dp_6"
                            android:text="92#"
                            android:textColor="@color/color_34"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintStart_toEndOf="@+id/oil_original_price_tv"
                            app:layout_constraintBaseline_toBaselineOf="@+id/oil_current_price_tv" />

                        <TextView
                            android:id="@+id/oil_navigation_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_14"
                            android:drawableTop="@drawable/icon_navigation"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="0.00km"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/oil_money_tag" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tag_recycler_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_10"
                            app:layout_constraintEnd_toStartOf="@+id/oil_navigation_tv"
                            app:layout_constraintStart_toStartOf="@+id/oil_money_tag"
                            app:layout_constraintTop_toBottomOf="@+id/oil_num_tv" />

                        <TextView
                            android:id="@+id/quick_oil_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginStart="@dimen/common_margin"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/common_margin"
                            android:background="@drawable/home_oil_bg"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/dp_10"
                            android:text="一键加油"
                            android:textColor="@color/color_34"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp_17"
                            app:layout_constraintBottom_toTopOf="@+id/other_oil_tv"
                            app:layout_constraintTop_toBottomOf="@+id/tag_recycler_view" />

                        <TextView
                            android:id="@+id/other_oil_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:text="选其他加油站"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/quick_oil_tv" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/often_oil_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_quick_oil_rl"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_blue_6radius"
                    android:minHeight="@dimen/dp_32"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/integral_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/often_oil_recycler_view"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:visibility="visible"
                    android:background="@drawable/shape_white_6raduis"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/integral_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="• 已累计加油0.00元，再完成0.00元立即兑换iPhone XS"
                        android:textColor="@color/color_34"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:progress="40"
                        android:progressDrawable="@drawable/progress_bar_bg"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/integral_desc" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/integral_iv"
                        android:layout_width="@dimen/dp_31"
                        android:layout_height="@dimen/dp_31"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:src="@drawable/default_img_bg"
                        app:layout_constraintEnd_toStartOf="@+id/award_tv"
                        app:layout_constraintTop_toTopOf="@id/progress"
                        app:riv_border_color="@color/color_D8"
                        app:riv_border_width="@dimen/dp_0_5"
                        app:riv_corner_radius="@dimen/dp_4" />

                    <TextView
                        android:id="@+id/award_tv"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_31"
                        android:alpha="0.5"
                        android:background="@drawable/shape_receive_6radius"
                        android:gravity="center"
                        android:text="领取奖励"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/integral_iv" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:text="(约需1500单，已完成100单，限光华路加油站)"
                        android:textColor="@color/color_9A"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintEnd_toStartOf="@+id/integral_iv"
                        app:layout_constraintStart_toStartOf="@id/progress"
                        app:layout_constraintTop_toBottomOf="@id/progress" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exchange_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/integral_rl"
                    android:layout_marginTop="@dimen/dp_10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/exchange_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:text="积分豪礼"
                            android:textColor="@color/color_34"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="赚积分兑豪礼"
                            android:textColor="@color/color_99"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:drawableRight="@drawable/arrow_right_icon"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_12"
                            android:text="更多好礼兑换"
                            android:textColor="@color/color_99"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/exchange_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@+id/exchange_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exchange_rl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginBottom="@dimen/dp_220"
                    android:text="4亿车主都爱用的加油省钱神器"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_11" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>