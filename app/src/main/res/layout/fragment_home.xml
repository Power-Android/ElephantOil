<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/location_iv"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_13"
            android:layout_marginStart="@dimen/common_margin"
            android:src="@drawable/icon_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_20"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="暂无定位"
            android:textColor="@color/color_34"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sign_in_iv"
            app:layout_constraintStart_toEndOf="@+id/location_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_18"
            android:layout_marginEnd="@dimen/common_margin"
            android:src="@drawable/icon_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sign_in_iv"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/sign_in_iv"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tencent.smtt.sdk.WebView
            android:id="@+id/pay_web_view"
            android:layout_width="0.1px"
            android:layout_height="0.1px"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srlEnableLoadMore="true"
        app:srlEnableOverScrollDrag="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/no_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_251"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:background="@drawable/bg_home_no_location"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="73dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_home_loacaiton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_15"
                        android:alpha="0.7"
                        android:text="小象当前无法获取离您最近的油站信息呢！"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="horizontal">

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                            android:id="@+id/go_more_oil_view"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_27"
                            android:gravity="center"
                            android:text="查看更多油站"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp_11"
                            app:qmui_backgroundColor="@color/white"
                            app:qmui_borderWidth="0dp"
                            app:qmui_radius="@dimen/dp_14" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                            android:id="@+id/go_location_view"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_27"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:gravity="center"
                            android:text="去授权"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp_11"
                            app:qmui_backgroundColor="@color/white"
                            app:qmui_borderWidth="0dp"
                            app:qmui_radius="@dimen/dp_14" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommend_station_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/dp_58"
                        android:text="小象加油根据您当前的位置智能优选"
                        android:textColor="@color/color_6A"
                        android:textSize="@dimen/sp_11" />

                    <RelativeLayout
                        android:id="@+id/home_quick_oil_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:visibility="visible">
                        <!--                    <View-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_marginTop="@dimen/dp_10"-->
                        <!--                        />-->

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/icon_home_oil_bg">

                            <View
                                android:id="@+id/oil_img_iv_1"
                                android:layout_width="@dimen/dp_73"
                                android:layout_height="@dimen/dp_73"
                                android:layout_marginStart="@dimen/dp_32"
                                android:visibility="invisible"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/oil_name_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_13"
                                android:layout_marginTop="19dp"
                                android:layout_marginEnd="@dimen/dp_12"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/oil_img_iv_1"
                                app:layout_constraintTop_toTopOf="@+id/oil_img_iv_1" />

                            <TextView
                                android:id="@+id/oil_address_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginEnd="@dimen/dp_12"
                                android:alpha="0.8"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/oil_name_tv"
                                app:layout_constraintTop_toBottomOf="@+id/oil_name_tv" />

                            <TextView
                                android:id="@+id/oil_money_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_18"
                                android:layout_marginTop="@dimen/dp_15"
                                android:includeFontPadding="false"
                                android:text="¥"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/oil_img_iv_1" />

                            <TextView
                                android:id="@+id/oil_current_price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="0.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                app:layout_constraintBaseline_toBaselineOf="@+id/oil_money_tag"
                                app:layout_constraintStart_toEndOf="@+id/oil_money_tag" />

                            <TextView
                                android:id="@+id/oil_original_price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:alpha="0.7"
                                android:includeFontPadding="false"
                                android:text="油站价¥0.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13"
                                app:layout_constraintBaseline_toBaselineOf="@+id/oil_money_tag"
                                app:layout_constraintStart_toEndOf="@+id/oil_current_price_tv" />

                            <TextView
                                android:id="@+id/oil_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginStart="@dimen/dp_10"
                                android:background="@drawable/shape_white_4raduis"
                                android:drawableRight="@drawable/icon_down_arrow"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="92#"
                                android:textColor="@color/color_34"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintBaseline_toBaselineOf="@+id/oil_current_price_tv"
                                app:layout_constraintStart_toEndOf="@+id/oil_original_price_tv" />

                            <TextView
                                android:id="@+id/oil_navigation_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_14"
                                android:drawableTop="@drawable/icon_navigation"
                                android:drawablePadding="@dimen/dp_8"
                                android:text="0.00km"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/oil_money_tag" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/tag_recycler_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:minHeight="@dimen/dp_40"
                                app:layout_constraintEnd_toStartOf="@+id/oil_navigation_tv"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/oil_money_tag"
                                app:layout_constraintTop_toBottomOf="@+id/oil_num_tv" />

                            <TextView
                                android:id="@+id/quick_oil_tv"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginStart="@dimen/common_margin"
                                android:layout_marginEnd="@dimen/common_margin"
                                android:background="@drawable/home_oil_bg"
                                android:gravity="center_horizontal"
                                android:paddingTop="11dp"
                                android:text="一键加油"
                                android:textColor="@color/color_34"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/common_margin"
                                app:layout_constraintTop_toBottomOf="@+id/tag_recycler_view"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:text="选其他加油站"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/quick_oil_tv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginStart="@dimen/dp_29"
                            android:layout_marginTop="@dimen/dp_2"
                            android:background="@drawable/ic_top_r_bg" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/oil_img_iv"
                            android:layout_width="@dimen/dp_73"
                            android:layout_height="@dimen/dp_73"
                            android:layout_marginStart="@dimen/dp_32"
                            android:layout_marginTop="@dimen/dp_9"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_img_bg"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_oval="true" />
                    </RelativeLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/often_oil_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_quick_oil_rl"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_blue_6radius"
                    android:minHeight="@dimen/dp_24"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_8"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/integral_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/often_oil_recycler_view"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_white_6raduis"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/integral_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="还需加油0.00元立即领取"
                        android:textColor="@color/color_34"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toStartOf="@+id/integral_iv"
                        app:layout_constraintStart_toStartOf="@+id/progress"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:progressDrawable="@drawable/progress_bar_bg"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/order_num_dec_view" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/integral_iv"
                        android:layout_width="@dimen/dp_31"
                        android:layout_height="@dimen/dp_31"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:src="@drawable/default_img_bg"
                        app:layout_constraintBottom_toBottomOf="@+id/award_tv"
                        app:layout_constraintEnd_toStartOf="@+id/award_tv"
                        app:layout_constraintTop_toTopOf="@id/award_tv"
                        app:riv_border_color="@color/color_D8"
                        app:riv_border_width="@dimen/dp_0_5"
                        app:riv_corner_radius="@dimen/dp_4" />

                    <TextView
                        android:id="@+id/award_tv"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_31"
                        android:alpha="0.5"
                        android:background="@drawable/shape_no_receive_6radius"
                        android:gravity="center"
                        android:text="领取奖励"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/order_num_dec_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:text="(价值300积分)"
                        android:textColor="@color/color_9A"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/integral_iv"
                        app:layout_constraintStart_toStartOf="@id/progress"
                        app:layout_constraintTop_toBottomOf="@id/integral_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/other_oil_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_65"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_white_6raduis"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/dp_172"
                        android:layout_height="@dimen/dp_47"
                        android:layout_marginStart="@dimen/dp_12"
                        android:scaleType="fitXY"
                        android:src="@drawable/often_oil_iv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_32"
                        android:text="更多周边优惠油站>>"
                        android:textColor="@color/color_76FF"
                        android:textSize="@dimen/sp_13"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_107"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    app:banner_auto_loop="true"
                    app:banner_indicator_height="@dimen/dp_2"
                    app:banner_indicator_margin="@dimen/dp_3"
                    app:banner_indicator_normal_color="@color/white_20"
                    app:banner_indicator_normal_width="@dimen/dp_9"
                    app:banner_indicator_selected_color="@color/white"
                    app:banner_indicator_selected_width="@dimen/dp_9"
                    app:banner_loop_time="5000"
                    app:banner_radius="@dimen/dp_8" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exchange_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/exchange_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:text="积分豪礼"
                            android:textColor="@color/color_34"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="赚积分兑豪礼"
                            android:textColor="@color/color_99"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
                            app:layout_constraintStart_toEndOf="@+id/tv1" />

                        <TextView
                            android:id="@+id/go_integral_view"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:drawableRight="@drawable/arrow_right_icon"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_12"
                            android:text="更多好礼兑换"
                            android:textColor="@color/color_99"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/exchange_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        app:layout_constraintTop_toBottomOf="@+id/exchange_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/local_life_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="本地生活"
                        android:textColor="@color/color_34"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="吃饭赢好礼"
                        android:textColor="@color/color_99"
