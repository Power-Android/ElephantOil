<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_47"
        android:src="@drawable/privacy_net"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接网络"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_img_iv"/>
    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需要连接网络方能正常为您提供服务。"
        android:textSize="@dimen/sp_12"
        android:textColor="#646464"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
        app:layout_constraintStart_toStartOf="@+id/item_title_tv"/>
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>