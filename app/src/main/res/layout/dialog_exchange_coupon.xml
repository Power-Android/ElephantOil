<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_303"
        android:layout_height="@dimen/dp_330"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_303"
            android:layout_height="@dimen/dp_286"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_white_13radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换"
                android:textColor="@color/color_34"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_22"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/item_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小象会员专享， 将兑换为￥42元加油红包"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_34"
                android:textSize="@dimen/sp_12"
                app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/old_coupon_cl"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/dialog_coupon_exhchange_bg"
                app:layout_constraintTop_toBottomOf="@+id/item_desc_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow_iv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通用券"
                    android:textColor="#8A521E"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginTop="@dimen/dp_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/item_old_money_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textStyle="bold"
                    android:textColor="#8A521E"
                    app:layout_constraintBaseline_toBaselineOf="@+id/item_old_money_tv"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/item_old_money_tv"/>
                <TextView
                    android:id="@+id/item_old_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#8A521E"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_23"
                    android:layout_marginStart="@dimen/dp_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_old_money_tag"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/arrow_iv"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_21"
                android:src="@drawable/dialog_exchange_arrow"
                app:layout_constraintStart_toEndOf="@+id/old_coupon_cl"
                app:layout_constraintEnd_toStartOf="@+id/new_coupon_cl"
                app:layout_constraintTop_toTopOf="@id/old_coupon_cl"
                app:layout_constraintBottom_toBottomOf="@+id/old_coupon_cl"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/new_coupon_cl"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/dialog_coupon_exhchange_bg"
                app:layout_constraintTop_toBottomOf="@+id/item_desc_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/arrow_iv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="油站专用"
                    android:textColor="#8A521E"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginTop="@dimen/dp_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/item_new_money_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="#8A521E"
                    app:layout_constraintBaseline_toBaselineOf="@+id/item_new_money_tv"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/item_new_money_tv"/>
                <TextView
                    android:id="@+id/item_new_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#8A521E"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginStart="@dimen/dp_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_new_money_tag"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/item_exchange_tv"
                android:layout_width="@dimen/dp_225"
                android:layout_height="@dimen/dp_59"
                android:text="确认兑换"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_10"
                android:background="@drawable/dialog_exhcange_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@drawable/ic_dialog_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>