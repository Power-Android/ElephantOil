<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pay.PayQueryActivity">
    <include layout="@layout/top_title_layout"
        android:id="@+id/title_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tb_toolbar"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/query_pay_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认是否已完成支付？"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_0F"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintTop_toBottomOf="@+id/iv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_40"
        android:text="还未支付"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_76FF"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_stroke_blue_20radius"
        app:layout_constraintTop_toBottomOf="@+id/layout_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv2"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_40"
        android:text="已完成支付"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_blue_20radius"
        app:layout_constraintTop_toBottomOf="@+id/layout_1"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>