<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@color/color_F5">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_110"
        android:orientation="vertical"
        app:qmui_backgroundColor="@color/white"
        app:qmui_radius="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5">

                <TextView
                    android:id="@+id/item_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:text="满0元减0元加油券"
                    android:textColor="@color/color_34"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_coupon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:includeFontPadding="false"
                    android:text="0000-00-00 00:00:00"
                    android:textColor="@color/color_9A"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/item_coupon_amount"
                        android:text="¥"
                        android:textColor="@color/color_6431"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_coupon_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/money_tag"
                        android:text="0"
                        android:textColor="@color/color_6431"
                        android:textSize="@dimen/sp_23"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/item_use_range_tv"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="满0元可用"
                    android:textColor="#7F7F7F"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/ic_coupon_dotted_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_8">

            <RelativeLayout
android:id="@+id/explain_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/use_view">

                <TextView
                    android:id="@+id/desc_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="使用说明："
                    android:textColor="#858687"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/desc_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="使用说明："
                    android:textColor="#858687"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/down_view"
                    android:layout_width="8dp"
                    android:layout_height="4.5dp"
                    android:layout_alignTop="@+id/desc_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/dp_27"
                    android:layout_toRightOf="@+id/desc_content"
                    android:background="@drawable/arrow_down_gray"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/use_view"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/shape_use_immediately"
                android:gravity="center"
                android:text="立即使用"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_layout"
        android:layout_alignBottom="@+id/content_layout"
        android:minHeight="@dimen/dp_110"
        android:visibility="invisible"
        app:qmui_backgroundColor="#B3FFFFFF"
        app:qmui_borderWidth="@dimen/dp_0"
        app:qmui_radius="@dimen/dp_5" />

    <ImageView
        android:id="@+id/status_view"
        android:layout_width="@dimen/dp_57"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/ic_coupon_expired"
        android:visibility="gone" />
</RelativeLayout>