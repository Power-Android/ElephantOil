<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_4raduis">
    <ImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/common_margin"
        android:layout_height="@dimen/common_margin"
        android:src="@drawable/icon_price_fall"
        android:layout_marginStart="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直降优惠"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_img_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥0.00"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_2"
        app:layout_constraintStart_toEndOf="@+id/item_title_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择加油金额"
        android:textColor="@color/color_B1"
        android:textSize="@dimen/sp_12"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_goneMarginEnd="@dimen/dp_12"
        app:layout_constraintEnd_toStartOf="@+id/item_switch_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableRightCompat="@drawable/arrow_right_icon" />
    <TextView
        android:id="@+id/item_switch_tv"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_21"
        android:visibility="gone"
        android:background="@drawable/selector_switch"
        android:layout_marginEnd="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>