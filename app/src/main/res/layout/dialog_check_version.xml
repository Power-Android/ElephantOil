<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/dp_274"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_white_6raduis"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_28"
                android:lineSpacingMultiplier="1.2"
                android:text="检查到新版本，是否更新？"
                android:textColor="@color/color_34" />

            <ProgressBar
                android:id="@+id/line_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_line_down"
                android:visibility="gone" />

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_F5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_9A"
                    android:textSize="@dimen/sp_14" />

                <View android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_F5"/>

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>