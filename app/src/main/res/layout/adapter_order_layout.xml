    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:qmui_backgroundColor="@color/white"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14">

            <TextView
                android:id="@+id/item_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/item_status_view"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/color_34"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/item_status_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="状态"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_E8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/dp_14"
            >

            <TextView
                android:id="@+id/item_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="¥0.00"
                android:textColor="@color/color_30"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/item_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0000-00-00 00:00"
                android:textColor="@color/color_9A"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
               android:id="@+id/continue_pay_view"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                android:gravity="center"
                android:text="继续支付"
                android:textColor="@color/color_77"
                android:textSize="@dimen/sp_12"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/color_C3"
                app:qmui_borderWidth="0.5dp"
                app:qmui_radius="@dimen/dp_13" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/cancel_order_view"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/color_77"
                android:textSize="@dimen/sp_12"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/color_C3"
                app:qmui_borderWidth="0.5dp"
                app:qmui_radius="@dimen/dp_13"

                />
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>