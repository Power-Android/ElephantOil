<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2020年11月"
        android:textColor="@color/color_4036"
        android:textSize="@dimen/sp_13" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_17"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_17"
        app:qmui_backgroundColor="@color/white"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腾讯月卡"
                android:textColor="@color/color_34"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="状态"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/color_E8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥200.00"
                android:textColor="@color/color_30"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0000-00-00 00:00"
                android:textColor="@color/color_9A"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:layout_marginRight="8dp"
                android:text="继续支付"
                android:textColor="@color/color_77"
                android:textSize="@dimen/sp_12"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/color_C3"
                app:qmui_borderWidth="0.5dp"
                app:qmui_radius="@dimen/dp_13" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:text="取消订单"
                android:textColor="@color/color_77"
                android:textSize="@dimen/sp_12"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/color_C3"
                app:qmui_borderWidth="0.5dp"
                app:qmui_radius="@dimen/dp_13"

                />
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>