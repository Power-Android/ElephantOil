<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_258"
        android:layout_height="@dimen/dp_227"
        android:background="@drawable/shape_white_13radius"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/service_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_1300"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计优惠"
            android:textColor="@color/color_34"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/service_money_tv"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/service_money_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直降优惠"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view1"/>
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------------------"
            android:textColor="#979797"
            app:layout_constraintTop_toTopOf="@+id/tv2"
            app:layout_constraintBottom_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toEndOf="@+id/tv2"
            app:layout_constraintEnd_toStartOf="@+id/fall_money"/>
        <TextView
            android:id="@+id/fall_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-￥0.00元"
            app:layout_constraintTop_toTopOf="@+id/tv2"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/tv2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_23"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务费"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view2"/>
        <TextView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------------------"
            android:textColor="#979797"
            app:layout_constraintTop_toTopOf="@+id/tv3"
            app:layout_constraintBottom_toBottomOf="@+id/tv3"
            app:layout_constraintStart_toEndOf="@+id/tv3"
            app:layout_constraintEnd_toStartOf="@+id/service_money"/>
        <TextView
            android:id="@+id/service_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+￥1元"
            app:layout_constraintTop_toTopOf="@+id/tv3"
            app:layout_constraintBottom_toBottomOf="@+id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view2"
            android:layout_marginEnd="@dimen/dp_23"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_146"
            android:layout_height="@dimen/dp_38"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:background="@drawable/shape_pay_6radius"
            android:layout_marginBottom="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>