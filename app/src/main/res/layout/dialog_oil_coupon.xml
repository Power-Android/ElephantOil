<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@color/color_F0"
    android:minHeight="@dimen/dp_500">
    <ImageView
        android:id="@+id/cancel_iv"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_43"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:src="@drawable/dialog_close_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小象优惠券"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_iv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintBottom_toTopOf="@+id/no_coupon_tv"/>
    <TextView
        android:id="@+id/no_coupon_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="不使用优惠券"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_76FF"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>