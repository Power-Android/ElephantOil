<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_86"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@drawable/shape_white_6raduis">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_62"
        android:src="@drawable/default_img_bg"
        app:riv_corner_radius="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="这是权益列表"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_34"
        app:layout_constraintTop_toTopOf="@+id/item_img_iv"
        app:layout_constraintStart_toEndOf="@id/item_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"/>
    <TextView
        android:id="@+id/item_integral_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="79积分+49.00元"
        android:textColor="@color/color_1300"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"
        android:layout_marginEnd="@dimen/dp_12"
        app:layout_constraintEnd_toStartOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/item_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_img_iv"/>
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/icon_org_arrow"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/common_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>