<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:id="@+id/carview"
    android:visibility="visible"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintTop_toTopOf="parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/car_img_iv_1"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_73"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_20"
            app:riv_corner_radius="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/default_img_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/car_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#1D1D1D"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/car_img_iv_1"
            app:layout_constraintTop_toTopOf="@+id/car_img_iv_1" />

        <TextView
            android:id="@+id/car_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_12"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/car_navigation_tv"
            app:layout_constraintStart_toStartOf="@+id/car_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/car_name_tv" />

        <TextView
            android:id="@+id/car_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time_icom"
            android:drawablePadding="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="营业时间：每天09：00-22：00"
            android:textColor="#828282"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/car_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/car_address_tv" />
        <TextView
            android:id="@+id/car_navigation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:drawableLeft="@drawable/navigation_life_icon"
            android:drawablePadding="@dimen/dp_8"
            android:text="0.00km"
            android:textColor="@color/color_55"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@+id/car_address_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/float_layout"/>

        <com.qmuiteam.qmui.widget.QMUIFloatLayout
            android:id="@+id/float_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:minHeight="@dimen/dp_40"
            app:layout_constraintEnd_toStartOf="@+id/car_navigation_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/car_img_iv_1"
            app:layout_constraintTop_toBottomOf="@+id/car_img_iv_1"
            app:qmui_maxNumber="2" />

        <TextView
            android:id="@+id/quick_car_tv"
            android:layout_width="@dimen/dp_225"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:background="@drawable/shape_blue_20radius"
            android:gravity="center"
            android:text="一键养护"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>