<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qmui_radiusTopLeft="@dimen/dp_18"
        app:qmui_radiusTopRight="@dimen/dp_18"
        app:qmui_backgroundColor="@color/color_F5"
        android:orientation="vertical"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:gravity="left"
                        android:text="1、兑换码获取：参与小象加油活动有机会获得优惠券兑换码。"
                        android:textColor="#8D8D8D" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="left"
                        android:text="2、兑换码使用：在当前页面输入兑换码即可兑换相应优惠券。"
                        android:textColor="#8D8D8D" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@drawable/background_convert_coupon_edit_bg">

                        <EditText
                            android:id="@+id/convert_edit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_39"
                            android:background="@color/transparent"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="请输入兑换码"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLength="30"
                            android:paddingLeft="@dimen/dp_9"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#3B3B3B"
                            android:textColorHint="#CDCDCD"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/clear_edit_btn"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/edit_clear_icon"
                            android:visibility="gone" />
                    </FrameLayout>

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/convert_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_38"
                        android:layout_marginLeft="@dimen/dp_44"
                        android:layout_marginTop="@dimen/dp_72"
                        android:layout_marginRight="@dimen/dp_44"
                        android:enabled="true"
                        android:text="立即兑换"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:qmui_borderWidth="@dimen/dp_0"
                        app:qmui_radius="@dimen/dp_5"
                        app:qmui_backgroundColor="@color/colorAccent"/>
                </FrameLayout>
            </LinearLayout>
    </FrameLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>