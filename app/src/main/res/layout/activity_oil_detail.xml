<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5"
    tools:context=".ui.oil.OilDetailActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/oil_detail_bg"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/pay_web_view"
        android:layout_width="0.1px"
        android:layout_height="0.1px"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_35"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="@dimen/common_margin"
        android:src="@drawable/arrow_back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键加油"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toTopOf="@+id/back_iv"
        app:layout_constraintBottom_toBottomOf="@+id/back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_120"
        android:background="@drawable/shape_white_6raduis"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:id="@+id/oil_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光华路加油站"
            android:textColor="@color/color_76FF"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/oil_tag_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/oil_sign_iv"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintStart_toEndOf="@+id/oil_name_tv"
            app:layout_constraintTop_toTopOf="@+id/oil_name_tv"
            app:layout_constraintBottom_toBottomOf="@+id/oil_name_tv"/>
        <TextView
            android:id="@+id/oil_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区"
            android:textColor="@color/color_A0A0"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintEnd_toStartOf="@+id/oil_navigation_tv"
            app:layout_constraintStart_toStartOf="@+id/oil_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/oil_name_tv"/>
        <TextView
            android:id="@+id/oil_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="92#"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_34"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/oil_address_tv"
            app:layout_constraintTop_toBottomOf="@+id/oil_address_tv"/>
        <TextView
            android:id="@+id/oil_liter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00/L"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="@+id/oil_num_tv"
            app:layout_constraintStart_toEndOf="@+id/oil_num_tv"/>
        <TextView
            android:id="@+id/oil_navigation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00km"
            android:textColor="@color/color_55"
            android:textSize="@dimen/sp_12"
            android:drawableTop="@drawable/navigation_iv"
            android:drawablePadding="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@+id/oil_address_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站内开票"
            android:textColor="@color/color_34"
            android:textSize="@dimen/sp_12"
            android:drawableStart="@drawable/fapiao"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/oil_num_tv"
            app:layout_constraintBottom_toBottomOf="@+id/oil_num_tv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oil_tag_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/oil_num_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_white_6raduis"
        app:layout_constraintTop_toBottomOf="@id/layout_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:textColor="@color/color_A0A0"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oil_check_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/oil_num_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_400"
        android:background="@color/color_F0"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择油号/油枪"
            android:textStyle="bold"
            android:textColor="@color/color_76FF"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请您务必与加油员确认后在站内支付"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_6431"
            android:layout_marginTop="@dimen/dp_9"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择油号"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_34"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>