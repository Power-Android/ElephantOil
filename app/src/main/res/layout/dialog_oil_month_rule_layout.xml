<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="@dimen/dp_303"
        android:layout_height="@dimen/dp_312"
        android:orientation="vertical"
        android:background="@drawable/shape_white_13radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:padding="@dimen/dp_15"
            android:src="@drawable/icon_tb_close_bg"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动规则"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_34"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view1"
            android:paddingStart="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_18"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_13">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/month_rule_icon"/>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>