<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <!--    <TextView-->
    <!--        android:id="@+id/item_time_view"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:gravity="center"-->
    <!--        android:paddingTop="5dp"-->
    <!--        android:paddingBottom="5dp"-->
    <!--        android:text="2020年11月"-->
    <!--        android:textColor="@color/color_4036"-->
    <!--        android:textSize="@dimen/sp_13" />-->

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:qmui_backgroundColor="@color/white"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14">

            <TextView
                android:id="@+id/item_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toStartOf="@+id/item_status_view"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_34"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_status_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="状态"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_E8" />

        <TextView
            android:id="@+id/item_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="0000-00-00 00:00"
            android:textColor="@color/color_9A"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥0.00"
                android:textColor="@color/color_34"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/bottom_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/go_coupon_view"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center"
                    android:text="查看优惠券"
                    android:visibility="gone"
                    android:textColor="#737577"
                    android:textSize="@dimen/sp_12"
                    app:qmui_borderColor="#c3c3c3"
                    app:qmui_borderWidth="0.5dp"
                    app:qmui_radius="@dimen/dp_26" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/go_detail_view"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_26"
                    android:gravity="center"
                    android:text="查看详情"
                    android:textColor="#737577"
                    android:textSize="@dimen/sp_12"
                    app:qmui_borderColor="#c3c3c3"
                    app:qmui_borderWidth="0.5dp"
                    app:qmui_radius="@dimen/dp_26" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/continue_pay_view"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="继续支付"
                    android:textColor="@color/color_77"
                    android:textSize="@dimen/sp_12"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/color_C3"
                    app:qmui_borderWidth="0.5dp"
                    app:qmui_radius="@dimen/dp_13" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/cancel_order_view"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_26"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/color_77"
                    android:textSize="@dimen/sp_12"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/color_C3"
                    app:qmui_borderWidth="0.5dp"
                    app:qmui_radius="@dimen/dp_13"

                    />
            </LinearLayout>

        </LinearLayout>


    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>