<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F5"
    tools:context=".ui.pay.PayResultActivity">

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_title_blue_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/ic_pay_success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="支付成功"
                        android:textColor="@color/color_0F"
                        android:textSize="@dimen/sp_21"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tag_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="您已成功兑换"
                            android:textColor="@color/color_34"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="爱奇艺会员会员月卡"
                            android:textColor="@color/color_30"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="可登录对应的官方平台查看充值结果"
                        android:textColor="@color/color_9A"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="正在获取中，请您耐心等待"
                    android:textColor="@color/color_30"
                    android:textSize="@dimen/sp_15" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="密码："
                    android:textColor="@color/color_0F"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="7UzYKLuxSq"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_15" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/copy_view"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="复制"
                    android:textColor="@color/color_30"
                    android:textSize="@dimen/sp_10"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/color_30"
                    app:qmui_borderWidth="@dimen/dp_0_5"
                    app:qmui_radius="@dimen/dp_3" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_20"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请在店内向店员出示以下券码"
                    android:textColor="@color/color_6B"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/default_img_bg" />

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@color/color_E4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="商城首页"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_16"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/colorAccent"
                    app:qmui_borderWidth="@dimen/dp_1"
                    app:qmui_radius="@dimen/dp_20" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="订单详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    app:qmui_backgroundColor="@color/colorAccent"
                    app:qmui_borderColor="@color/colorAccent"
                    app:qmui_borderWidth="@dimen/dp_1"
                    app:qmui_radius="@dimen/dp_20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:orientation="vertical">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:text="再试一次"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    app:qmui_backgroundColor="@color/colorAccent"
                    app:qmui_borderColor="@color/colorAccent"
                    app:qmui_borderWidth="@dimen/dp_1"
                    app:qmui_radius="@dimen/dp_20" />

                <TextView
                    android:id="@+id/go_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="商城首页"
                    android:textColor="@color/color_30"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@color/color_E4" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>