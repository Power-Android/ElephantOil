<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_53"
    android:layout_height="@dimen/dp_57"
    android:layout_marginEnd="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/month_red_def"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_money_tag"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_money_tag"/>
    <TextView
        android:id="@+id/item_money_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/sp_21"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_5"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="满20可用"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9"
        android:layout_marginBottom="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>