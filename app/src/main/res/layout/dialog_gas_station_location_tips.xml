<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_13radius"
        android:minHeight="@dimen/dp_242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:padding="@dimen/common_margin"
            android:src="@drawable/dialog_close_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="系统定位您当前不在油站内"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="避免您支付错误，请再次确认是否在"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/tip_title" />
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/station_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_211"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_radius="@dimen/dp_6"
            app:qmui_borderColor="@color/colorAccent"
            app:qmui_backgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tip_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/station_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_34"
                android:layout_centerInParent="true"
                android:text="油站名"
                />
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
        <LinearLayout
            android:id="@+id/bt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_27"
            app:layout_constraintTop_toBottomOf="@+id/station_name_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_38"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_6"
                app:qmui_backgroundColor="@color/colorAccent"
                >
                <TextView
                    android:id="@+id/select_agin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:text="重新选择"
                    />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_10"
                app:qmui_borderWidth="@dimen/dp_0"
                app:qmui_radius="@dimen/dp_6"
                app:qmui_borderColor="@color/colorAccent"
                app:qmui_backgroundColor="@color/color_D0"
                >
                <TextView
                    android:id="@+id/navigation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:text="导航过去"
                    />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/continue_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续支付"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:enabled="true"
            app:layout_constraintTop_toBottomOf="@+id/bt_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>