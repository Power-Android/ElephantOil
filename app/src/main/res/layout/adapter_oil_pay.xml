<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_35"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_pay_type_iv"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/wechat_icon"
        android:layout_marginStart="@dimen/dp_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textColor="@color/color_0202"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_pay_type_iv"/>
    <TextView
        android:id="@+id/dec_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_red_3raduis"
        android:textSize="@dimen/sp_10"
        android:gravity="center_vertical"
        android:textColor="#FE1300"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_40"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_title_tv"/>
    <ImageView
        android:id="@+id/item_check_box"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/selector_checkbox"/>
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:visibility="gone"
        android:background="@color/color_F0"
        app:layout_constraintStart_toStartOf="@+id/item_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>