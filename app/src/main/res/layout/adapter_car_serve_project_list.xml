<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

<LinearLayout
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dp_9"
    android:paddingBottom="@dimen/dp_9"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    >

<com.makeramen.roundedimageview.RoundedImageView
   android:id="@+id/img_iv"
    android:layout_width="@dimen/dp_50"
    android:layout_height="@dimen/dp_50"
    android:src="@drawable/ic_car_serve_default"
    app:riv_corner_radius="@dimen/dp_6"
    app:riv_border_width="0.5dp"
    app:riv_border_color="#94d1d1d1"
    />
    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:textColor="@color/color_34"
        android:textSize="@dimen/sp_15"
        android:lines="1"
        android:ellipsize="end"
        android:text="--"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/line_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:textColor="#979797"
        android:textSize="@dimen/sp_19"
        android:text="¥0"
        />
    <TextView
        android:id="@+id/sale_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="#FE1300"
        android:textSize="@dimen/sp_19"
        android:text="¥0"
        />
    <ImageView
        android:id="@+id/check_box"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/selector_checkbox"
       />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>